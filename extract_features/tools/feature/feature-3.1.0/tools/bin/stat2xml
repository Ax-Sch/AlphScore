#! /usr/bin/env python

# Convert .sitedataaf file to tab delimited

import sys,os
from feature.statfile import StatFile,StatXmlDoc

if __name__ == "__main__":
    import getopt
    def eusage():
        print "Usage: %s [INFILE] [OUTFILE]" % os.path.basename(sys.argv[0])
        sys.exit(1)

    infilename, outfilename = ('-', '-')
    args = sys.argv[1:]
    try:
        optlist,args = getopt.getopt(args,'h',['help'])
    except getopt.GetoptError:
        eusage()
    for opt,arg in optlist:
        if opt in ('-h','--help'):
            eusage()
    if len(args) > 0:
        infilename = args[0]
    if len(args) > 1:
        outfilename = args[1]
    if len(args) > 2:
        eusage()

    if infilename == '-':
        infh = sys.stdin
    else:
        infh = file(infilename)
    if outfilename == '-':
        outfh = sys.stdout
    else:
        outfh = file(outfilename,'w')

    statfile = StatFile(fh=infh)
    print >>outfh,StatXmlDoc(statfile)
